{
  "name": "arcjournal",
  "version": "1.0.6",
  "description": "ArcJournal — Part of the ArcNode Network",
    "author": {
    "name": "ArcNode Network"
  },
  "main": "electron/main.js",
  "scripts": {
    "start":   "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:5173 && npm run electron\"",
    "server":  "cd server && npm run dev",
    "client":  "cd client && npm run dev",
    "electron": "cross-env NODE_ENV=development electron .",
    "build":   "cd client && npm run build",
    "make":    "npm run build && electron-forge make",
    "package": "npm run build && electron-forge package",
    "publish": "npm run build && electron-forge publish"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-dmg": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "wait-on": "^7.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "ArcJournal",
        "executableName": "arcjournal",
        "icon": "assets/icon",
        "extraResource": ["assets"],
        "appVersion": "1.0.6"
      },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "stinoooo",
              "name": "arcjournal"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "arcjournal",
            "authors": "ArcNode Network",
            "description": "ArcJournal — Personal journaling app",
            "setupIcon": "assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}